<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginRight="@dimen/margin_8"
    android:layout_marginLeft="@dimen/margin_8"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:id="@+id/llUserList"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/margin_12"
        android:background="@drawable/cardview_shape"
        android:orientation="vertical"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvUserList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:layout_marginVertical="@dimen/margin_12"
            android:text="User List"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_margin="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSingleUser"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/margin_12"
        android:background="@drawable/cardview_shape"
        android:orientation="vertical"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvSingleUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_12"
            android:text=" Single User "
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_margin="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBook"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/margin_12"
        android:background="@drawable/cardview_shape"
        android:orientation="vertical"
        android:weightSum="1">
        <TextView
            android:id="@+id/tvBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/margin_12"
            android:text="Book "
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_margin="30dp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>